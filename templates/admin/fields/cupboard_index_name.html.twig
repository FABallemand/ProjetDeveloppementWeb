{%- set url = ea_url()
    .setController('App\\Controller\\Admin\\CupboardCrudController')
    .setAction('detail')
    .setEntityId(entity.instance.id)
-%}
{% set action = app.request.attributes.get('_controller')[1] %}
{% if action == 'detail' %}
    {{ field.value }}
{% else %}
	<a href="{{ url }}">
		{% if entity.instance.shoes %}
			{{ field.value }}
		{%  else %}
            <strike>{{ field.value }}</strike>
        {% endif %}    
 	</a>
 {% endif %}