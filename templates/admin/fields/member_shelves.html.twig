<ul>
    {% for shelf in field.value %}
    {%- set url = ea_url()
    .setController('App\\Controller\\Admin\\ShelfCrudController')
    .setAction('detail')
    .setEntityId(shelf.id)
    -%}
    <li>
        <a href="{{ url }}">
            {{ shelf }}
        </a>
    </li>
    {% else %}
</ul>
<span class="badge badge-secondary">None</span>
<ul>
    {% endfor %}
</ul>