{% extends 'base.html.twig' %}

{% block title %}Members List{% endblock %}

{% block main %}
<h1>Members List</h1>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            
            {% for member in members %}
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">{{ member.name }}</h5>
                            <!-- Product reviews-->
                            {% for cupboard in member.cupboards %}
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="text-center"><a href="{{ path('cupboard_show', {'id': cupboard.id}) }}">{{ cupboard.name }}</a></div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="{{ path('member_show', {'id': member.id}) }}">Show profile</a></div>
                    </div>
                </div>
            </div>
            {% endfor %} {# shoes #}            
            
        </div>
    </div>
</section>

<section>
    <ul>
        {% for member in members %}
        <li><a href="{{ path('member_show', {'id': member.id}) }}">{{ member.name }}</a></li>
        {% endfor %} {# members #}
    </ul>
</section>

<section>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>

            {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td><a href="{{ path('member_show', {'id': member.id}) }}">{{ member.name }}</a></td>
                <td>{{ member.age }}</td>
            </tr>
            {% endfor %} {# members #}

        </tbody>
    </table>
</section>

{% endblock %} {# body #}