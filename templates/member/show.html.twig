{% extends 'base.html.twig' %}

{% block title %}Member{% endblock %}

{% block main %}
    <h1>Member</h1>

    <!-- Created with: https://tablesgenerator.com/ -->
    <style type="text/css">
        .tg {
            border-collapse: collapse;
            border-spacing: 0;
        }

        .tg td {
            border-color: black;
            border-style: solid;
            border-width: 1px;
            font-family: Arial, sans-serif;
            font-size: 14px;
            overflow: hidden;
            padding: 10px 5px;
            word-break: normal;
        }

        .tg th {
            border-color: black;
            border-style: solid;
            border-width: 1px;
            font-family: Arial, sans-serif;
            font-size: 14px;
            font-weight: normal;
            overflow: hidden;
            padding: 10px 5px;
            word-break: normal;
        }

        .tg .tg-c3ow {
            border-color: inherit;
            text-align: center;
            vertical-align: top
        }

        .tg .tg-0pky {
            border-color: inherit;
            text-align: left;
            vertical-align: top
        }

        .tg .tg-0lax {
            text-align: left;
            vertical-align: top
        }
    </style>
    <table class="tg">
        <tbody>
            <tr>
                <th class="tg-0pky">ID</th>
                <th class="tg-c3ow" colspan="2">{{ member.id }}</th>
            </tr>
            <tr>
                <td class="tg-0pky">Name<br></td>
                <td class="tg-c3ow" colspan="2">{{ member.name }}</td>
            </tr>
            {% set cupboardNumber = 1 %}
            {% for cupboard in member.cupboards %}
            <tr>
                <td class="tg-0pky" rowspan="1">Cupboard {{ cupboardNumber }}<br></td>
                <td class="tg-0lax"><a href="{{ path('app_cupboard_show', {'id': cupboard.id}) }}">{{ cupboard }}</a></td>
            </tr>
            {% set cupboardNumber = cupboardNumber + 1 %}
            {% endfor %} {# member.cupboards #}
        </tbody>
    </table>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ member.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ member.name }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ member.age }}</td>
            </tr>
        </tbody>
    </table>

    <div class="p-4 pt-0 border-top-0 bg-transparent">
        <div class="text-center"><a class="btn btn-info mt-auto" href="{{ path('app_member_index') }}">Back to list</a></div>
    </div>

    <div class="p-4 pt-0 border-top-0 bg-transparent">
        <div class="text-center"><a class="btn btn-warning mt-auto" href="{{ path('app_member_edit', {'id': member.id}) }}">Edit</a></div>
    </div>

    {{ include('member/_delete_form.html.twig') }}
{% endblock %}
