{% extends 'base.html.twig' %}

{% block title %}Shoes List{% endblock %}

{% block main %}
<h1>Shoes List</h1>

<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            
            {% for shoe in shoes %}
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder">{{ shoe.brand }} {{ shoe.model }}</h5>
                            <!-- Product reviews-->
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                            </div>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="{{ path('shoe_show', {'id': shoe.id}) }}">Show details</a></div>
                    </div>
                </div>
            </div>
            {% endfor %} {# shoes #}            
            
        </div>
    </div>
</section>

<section>
    <ul>
        {% for shoe in shoes %}
        <li><a href="{{ path('shoe_show', {'id': shoe.id}) }}">{{ shoe.brand }} {{ shoe.model }}</a></li>
        {% endfor %} {# shoes #}
    </ul>
</section>

<section>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Brand</th>
                <th>Model</th>
            </tr>
        </thead>
        <tbody>

            {% for shoe in shoes %}
            <tr>
                <td>{{ shoe.id }}</td>
                <td><a href="{{ path('shoe_show', {'id': shoe.id}) }}">{{ shoe.brand }}</a></td>
                <td><a href="{{ path('shoe_show', {'id': shoe.id}) }}">{{ shoe.model }}</a></td>
            </tr>
            {% endfor %} {# shoes #}

        </tbody>
    </table>
</section>

{% endblock %} {# body #}