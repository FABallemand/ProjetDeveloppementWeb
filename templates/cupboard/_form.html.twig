            {% dump form.shoes %}

            <h3>Shoes</h3>
            <ul class="shoes" data-prototype="{{ form_widget(form.shoes.vars.prototype)|e('html_attr') }}">
                 {# form_row(form.shoes) #}
                 {# passer en revue chaque todo existante pour afficher ses champs #}
